 <section class=" container text-center pt-5 mt-5">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>



  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="col-md-6">

        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "First name", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, autocomplete: "Last Name", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
        <%= f.label :telephone %>
          <%= f.text_field :telephone, autocomplete: "telephone", class: "form-control" %>
        </div>
      </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :details %>
        <%= f.text_area :details, autocomplete: "description", class: "form-control", rows: 10 %>
      </div>

      <div class="form-group">
        <%= f.label :company %>
        <%= f.text_field :company, autocomplete: "company", class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, autocomplete: "image"  %>
      </div>

      <% if @account.image.present? %>
        <%= image_tag @account.image.url %>
      <% end %>
    </div>

    <div class="col-md-6">
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :current_password %><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control"  %>
      </div>
    </div>

    <div class="col-md-12">
      <div class="form-group">
        <%= f.submit "Update", class:"btn btn-lg btn-primary btn-block"   %>
      </div>
    </div>
  
  </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</section>